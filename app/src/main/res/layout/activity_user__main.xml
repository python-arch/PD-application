<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hospitago.user_Main">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rechospital"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="20dp"
        android:background="#00ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/open_map"
        android:layout_width="210dp"
        android:layout_height="66dp"
        android:background="@drawable/back_hospital"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rechospital" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearby hospitals"
        android:textColor="#fff"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/open_map"
        app:layout_constraintEnd_toEndOf="@+id/open_map"
        app:layout_constraintStart_toStartOf="@+id/open_map"
        app:layout_constraintTop_toTopOf="@+id/open_map" />


</androidx.constraintlayout.widget.ConstraintLayout>